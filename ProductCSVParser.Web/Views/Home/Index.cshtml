@model IEnumerable<Product>

@{
  ViewData["Title"] = "Filtered Products";
}

<h1>Filtered Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Id)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.CodeType)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Code)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.RetailerName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.DateReceived)
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CodeType)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.RetailerName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.DateReceived)
        </td>
      </tr>
    }
  </tbody>
</table>